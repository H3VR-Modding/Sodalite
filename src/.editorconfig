root=true

[*.*]
max_line_length=180

[makefile]
charset=utf-8
indent_style=tab
end_of_line=lf
insert_final_newline=true

[*.{json,xml,yml}]
charset=utf-8
indent_style=space
indent_size=2
end_of_line=lf
insert_final_newline=true

[*.{md,markdown}]
charset=utf-8
indent_style=space
indent_size=2
trim_trailing_whitespace=false
end_of_line=lf
insert_final_newline=true

[*.cs]
charset=utf-8
indent_style=tab
trim_trailing_whitespace=true
end_of_line=lf
insert_final_newline=true